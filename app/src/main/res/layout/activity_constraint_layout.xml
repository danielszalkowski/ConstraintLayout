<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintLayout">

    <View
        android:id="@+id/nig"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/blu1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toTopOf="@+id/nig"
        app:layout_constraintLeft_toRightOf="@+id/nig"
        />

    <View
        android:id="@+id/blu2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toTopOf="@+id/nig"
        app:layout_constraintEnd_toStartOf="@+id/nig"
        />

    <View
        android:id="@+id/blu3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@+id/nig"
        app:layout_constraintLeft_toRightOf="@+id/nig"
        />

    <View
        android:id="@+id/blu4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@+id/nig"
        app:layout_constraintEnd_toStartOf="@+id/nig"
        />

    <View
        android:id="@+id/purpl1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@+id/blu1"
        app:layout_constraintEnd_toStartOf="@+id/blu1"
        />

    <View
        android:id="@+id/purpl2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/blu3"
        app:layout_constraintEnd_toStartOf="@id/blu3"
        />

    <View
        android:id="@+id/purpl3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/blu4"
        app:layout_constraintEnd_toStartOf="@id/blu4"
        />

    <View
        android:id="@+id/purpl4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/blu3"
        app:layout_constraintStart_toEndOf="@id/blu3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>